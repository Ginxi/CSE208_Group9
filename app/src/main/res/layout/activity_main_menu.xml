<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    >
<com.example.sihan.restaurantrecommendation.com.example.sihan.restaurantrecommendation.view.SlidingMenu
    android:id="@+id/slideMenu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    hyman:rightPadding="100dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <include layout="@layout/left_menu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            >
          <!--  <Button
                android:id="@+id/menu_switch"
                android:onClick="toggleMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu switch" />

                  <ImageView
                    android:id="@+id/backToLeft"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_selector"
                    android:padding="10dp"
                    android:background="@drawable/null_btn_text"/>
               -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/headbg">

                <ImageButton
                    android:id="@+id/menu_switch"
                    android:onClick="toggleMenu"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_selector"
                    android:padding="10dp"
                    android:background="@drawable/null_btn_text"
                    />
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:text="Peronal Recommendation"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp" />


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></android.support.v7.widget.RecyclerView>


        </LinearLayout>


            </LinearLayout>

</com.example.sihan.restaurantrecommendation.com.example.sihan.restaurantrecommendation.view.SlidingMenu>

</RelativeLayout>
